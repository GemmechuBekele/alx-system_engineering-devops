#!/usr/bin/env bash
# Install and configure UFW firewall to allow only ports 22, 80, and 443

# Update package lists
apt-get update -y

# Install ufw if not installed
apt-get install ufw -y

# Set default policies
ufw default deny incoming
ufw default allow outgoing

# Allow SSH (port 22)
ufw allow 22/tcp

# Allow HTTP (port 80)
ufw allow 80/tcp

# Allow HTTPS (port 443)
ufw allow 443/tcp

# Enable UFW (force yes)
ufw --force enable

# Show firewall status
ufw status verbose
